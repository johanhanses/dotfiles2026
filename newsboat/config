# Maximum items to keep per feed
max-items 500

# macOS
browser "open -g -a 'Vivaldi' %u"

# Linux/Ubuntu
# browser "xdg-open %u"

# WSL - Open Windows Microsoft Edge
# browser "explorer.exe %u"

# Basic display settings
show-read-feeds yes
feed-sort-order unreadarticlecount-asc

# Colors - GitHub Light theme
color background default default
color listnormal default default
color listfocus white black bold
color listnormal_unread blue default bold
color listfocus_unread white black bold
color info white black bold
color article default default

# Key bindings
bind-key j down
bind-key k up
bind-key J next-feed
bind-key K prev-feed
bind-key G end
bind-key g home
bind-key l open
bind-key h quit
