#!/bin/bash
# Get the latest screenshot
# macOS version
LATEST=$(ls -1t ~/Desktop/Screenshot*.png 2>/dev/null | head -n1)

if [[ -z "$LATEST" ]]; then
    # Try alternative macOS screenshot location
    LATEST=$(ls -1t ~/Pictures/Screenshots/*.png 2>/dev/null | head -n1)
fi

if [[ -n "$LATEST" ]]; then
    echo "$LATEST"
else
    echo "No screenshots found"
    exit 1
fi
